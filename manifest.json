{
  "name": "QuickCalView",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["identity", "storage", "https://www.googleapis.com/*"],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "oauth2": {
    "client_id": "82065418705-pu9j37v7bjnguklnpn0dh2kvtnl39sb5.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/calendar", "https://www.googleapis.com/auth/tasks"]
  },
  "background": {
    "scripts": ["moment.min.js", "moment-timezone.min.js", "time_util.js", "calendar_events.js", "background.js"]
  }
}
